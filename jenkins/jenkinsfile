node('docker_admin') {
    docker.withRegistry('https://index.docker.io/v1/', 'DOCKERHUB') {
    
        git url: "https://github.com/redbeard28/docset.git", branch: 'jenkins_mkdocs', credentialsId: 'jenkins_github_pat'
    
        sh "git rev-parse HEAD > .git/commit-id"
        def commit_id = readFile('.git/commit-id').trim()
        println commit_id
    
        stage "build"
        def app = docker.build "redbeard28/docset:0.1"
    
        stage "publish"
        app.push 'master'
        app.push "${commit_id}"
    }
}
